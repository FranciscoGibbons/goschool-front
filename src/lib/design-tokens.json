{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Academic System Design Tokens",
  "version": "1.0.0",
  "description": "Design tokens for the academic student management system. See DESIGN_CONTRACT.md for usage rules.",

  "colors": {
    "light": {
      "background": "#FFFFFF",
      "surface": "#FFFFFF",
      "surface-muted": "#F8FAFC",
      "border": "#E2E8F0",
      "border-muted": "#F1F5F9",

      "primary": "#3B82F6",
      "primary-hover": "#2563EB",
      "primary-foreground": "#FFFFFF",

      "success": "#15803D",
      "success-muted": "#F0FDF4",
      "warning": "#A16207",
      "warning-muted": "#FEFCE8",
      "error": "#DC2626",
      "error-muted": "#FEF2F2",

      "text-primary": "#0F172A",
      "text-secondary": "#64748B",
      "text-muted": "#94A3B8",
      "text-inverse": "#FFFFFF"
    },
    "dark": {
      "background": "#0F172A",
      "surface": "#1E293B",
      "surface-muted": "#334155",
      "border": "#475569",
      "border-muted": "#334155",

      "primary": "#3B82F6",
      "primary-hover": "#60A5FA",
      "primary-foreground": "#0F172A",

      "success": "#22C55E",
      "success-muted": "#14532D",
      "warning": "#FACC15",
      "warning-muted": "#422006",
      "error": "#EF4444",
      "error-muted": "#450A0A",

      "text-primary": "#F8FAFC",
      "text-secondary": "#CBD5E1",
      "text-muted": "#64748B",
      "text-inverse": "#0F172A"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "\"Inter\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
      "mono": "\"JetBrains Mono\", \"Fira Code\", Consolas, monospace"
    },
    "fontSize": {
      "xs": { "size": "0.75rem", "lineHeight": "1rem" },
      "sm": { "size": "0.875rem", "lineHeight": "1.25rem" },
      "base": { "size": "1rem", "lineHeight": "1.5rem" },
      "lg": { "size": "1.125rem", "lineHeight": "1.75rem" },
      "xl": { "size": "1.25rem", "lineHeight": "1.75rem" },
      "2xl": { "size": "1.5rem", "lineHeight": "2rem" },
      "3xl": { "size": "1.875rem", "lineHeight": "2.25rem" }
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600
    }
  },

  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem"
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem"
  },

  "boxShadow": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)"
  },

  "components": {
    "button": {
      "height": {
        "sm": "2rem",
        "default": "2.5rem",
        "lg": "3rem"
      },
      "padding": {
        "sm": "0 0.75rem",
        "default": "0 1rem",
        "lg": "0 1.5rem"
      }
    },
    "card": {
      "padding": {
        "compact": "1rem",
        "default": "1.25rem"
      }
    },
    "table": {
      "cellPadding": "0.75rem 1rem",
      "headerHeight": "3rem"
    },
    "input": {
      "height": "2.5rem",
      "padding": "0 0.75rem"
    }
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "transitions": {
    "duration": {
      "fast": "150ms",
      "default": "200ms"
    },
    "timing": "ease-out"
  }
}
